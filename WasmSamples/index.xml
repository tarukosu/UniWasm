<soml>
    <scene>
        <primitive type="cube" id="fix_world_position">
            <script src="./wasm/fix_transform.wasm" args="--position 1.0 2.0 3.0 --world"/>
        </primitive>
        <primitive type="cube" id="fix_local_position">
            <script src="./wasm/fix_transform.wasm" args="--position 1.0 2.0 3.0 --local"/>
        </primitive>

        <primitive type="cube">
            <script src="./translate_x.wasm"/>
        </primitive>
        <element position.x="3">
            <primitive type="cube">
                <script src="./circular_motion.wasm"/>
            </primitive>
        </element>
    </scene>
</soml>
